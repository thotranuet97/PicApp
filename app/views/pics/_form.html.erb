<%= form_with(model: pic, local: true, class: "form-horizontal") do |form| %>
  <% if pic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pic.errors.count, "error") %> prohibited this pic from being saved:</h2>

      <ul>
      <% pic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-9">
  <div class="form-group">
    <%= form.hidden_field :user_id, value: current_user.id %>

    <%= form.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control", placeholder: "You awesome pic" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: "form-control", placeholder: "How is your pic?" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :tag_list, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :tag_list, class: "form-control", placeholder: "Your hashtag" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :picture, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.file_field :picture %>
    </div>
  </div>

  <div class="form-group" style="margin-top: 30px;">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Upload", class: "btn btn-outline-success" %>
      <%= link_to 'Cancel', pics_path, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
<% end %>
