<p id="notice"><%= notice %></p>

<h1>Hashtags</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Pic</th>
      <th>Album</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hashtags.each do |hashtag| %>
      <tr>
        <td><%= hashtag.content %></td>
        <td><%= hashtag.pic_id %></td>
        <td><%= hashtag.album_id %></td>
        <td><%= hashtag.user_id %></td>
        <td><%= link_to 'Show', hashtag %></td>
        <td><%= link_to 'Edit', edit_hashtag_path(hashtag) %></td>
        <td><%= link_to 'Destroy', hashtag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hashtag', new_hashtag_path %>
